<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <eu.bamboo.speech_waves_animation.SpeechLineView
        android:id="@+id/musicLine"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginVertical="20dp"
        app:animationSpeed="NORMAL"
        app:endColor="#a9c6f4"
        app:gradientOffset="0.1"
        app:lineCount="8"
        app:lineThickness="6"
        app:middleColor="#151764"
        app:middleLineThickness="5"
        app:startColor="#656ED1"
        app:waveDensity="0.2"
        app:windowPadding="0.24" />

</FrameLayout>